<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Record Rule: Only allow users in favorite_user_ids to see projects -->
    <record id="project_portfolio_project_rule" model="ir.rule">
        <field name="name">Project: User can see only favorite projects</field>
        <field name="model_id" ref="project.model_project_project"/>
        <!-- <field name="domain_force">[('favorite_user_ids', 'in', [user.id])]</field> -->
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Optional: Another rule for Portfolio managers -->
    <record id="project_portfolio_manager_rule" model="ir.rule">
        <field name="name">Portfolio Managers: Access all projects in their portfolios</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="domain_force">[('portfolio_id.manager_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
